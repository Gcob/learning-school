<span class="vecteurToString">
    <span style="position: relative;">
        <span style="position: absolute; top:-11px; left: -1px;">
            &#8594;
        </span>
        {{ vecteur.name }} =
    </span>

    {{ vecteur.grandeur }} {{ vecteur.unites }}

    {% if vecteur.sens == 3 or vecteur.sens == 4 %}
        {% set rotation = -90 %}
    {% elseif vecteur.sens == 5 or vecteur.sens == 6 %}
        {% set rotation = 180 %}
    {% elseif vecteur.sens == 7 or vecteur.sens == 8%}
        {% set rotation = 90 %}
    {% else %}
        {% set rotation = 0 %}
    {% endif %}

    <svg width="20" height="25" style="transform: rotate({{ rotation }}deg)">
        {% if vecteur.sens % 2 == 1 %}
            <line x1="24" y1="20" x2="1" y2="20" style="stroke:black;stroke-width:2" />
            <line x1="1" y1="20" x2="15" y2="5" style="stroke:black;stroke-width:2" />
            <polygon points="10,5 15,10 15,5" style="fill:black;stroke:black;stroke-width:2" />
        {% elseif vecteur.sens % 2 == 0 %}
            <line x1="1" y1="5" x2="1" y2="20" style="stroke:black;stroke-width:2" />
            <line x1="1" y1="20" x2="15" y2="5" style="stroke:black;stroke-width:2" />
            <polygon points="10,5 15,10 15,5" style="fill:black;stroke:black;stroke-width:2" />
        {% endif %}
    </svg>
    {{ vecteur.direction }}Â°
</span>